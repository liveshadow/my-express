extends layout.jade

// TODO: use the better template from the hackathon
h3 Pulls
block content
    div.row
        div.five.columns 
          b Issue
        div.two.columns 
          b User
    each item in pulls
        div.row
            div.five.columns
                b
                 a(href='/view/pulls/'+item.id)
                    = "Issue "+item.number
            div.two.columns #{item.user.login}